<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/item_image_backdrop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:tint="@color/image_header"
                android:tintMode="src_in"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        <ImageView
                android:id="@+id/item_poster_image"
                style="@style/ImagePosterStyle.Grid"
                android:layout_marginStart="@dimen/cardview_grid_content_padding"
                android:layout_marginTop="@dimen/cardview_grid_content_padding"
                android:layout_marginEnd="@dimen/cardview_grid_content_padding"
                android:contentDescription="@string/img_poster_contentdesc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

        <TextView
                android:id="@+id/item_list_text_title"
                style="@style/ItemListTextViewTitle"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/cardview_grid_content_padding"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/cardview_grid_content_padding"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_poster_image"
                tools:text="Aquaman" />

        <TextView
                android:id="@+id/item_list_release_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/item_list_text_title"
                app:layout_constraintStart_toStartOf="@+id/item_list_text_title"
                app:layout_constraintTop_toBottomOf="@+id/item_list_text_title"
                tools:text="December 12, 2018" />

        <RatingBar
                android:id="@+id/item_list_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:rating="4.5"
                app:layout_constraintEnd_toEndOf="@+id/item_list_text_title"
                app:layout_constraintStart_toStartOf="@+id/item_list_text_title"
                app:layout_constraintTop_toBottomOf="@+id/item_list_release_date" />

        <TextView
                android:id="@+id/item_list_votecount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_list_text_title"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_list_text_title"
                app:layout_constraintTop_toBottomOf="@+id/item_list_ratingBar"
                tools:text="(8873)" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>