<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView android:layout_width="0dp" android:layout_height="0dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" android:scaleType="fitCenter"
               android:adjustViewBounds="true" android:id="@+id/stackview_widget_item"/>
    <View android:layout_width="0dp" android:layout_height="0dp"
          android:id="@+id/widget_item_bg"
          app:layout_constraintEnd_toEndOf="@+id/stackview_widget_item"
          app:layout_constraintStart_toStartOf="@+id/stackview_widget_item"
          app:layout_constraintBottom_toBottomOf="@+id/stackview_widget_item"
          app:layout_constraintTop_toTopOf="@+id/favorite_widget_btn" android:background="#02FFFFFF"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_favorite_activated_24dp"
            android:id="@+id/favorite_widget_btn"
            android:padding="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/widget_item_bg"
    />
    <TextView
            tools:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/widget_fav_item_title" app:layout_constraintEnd_toStartOf="@+id/favorite_widget_btn"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/widget_item_bg"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/widget_item_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>