<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/page_previous_24dp"
            style="@style/Widget.AppCompat.ActionButton"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/adapter_page_previous"/>
    <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_toEndOf="@+id/adapter_page_previous"
            android:id="@+id/adapter_page_indicator"
            android:layout_width="@dimen/item_poster_height"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/adapter_page_previous"
            android:layout_alignTop="@+id/adapter_page_previous"/>
    <ImageButton
            android:layout_toEndOf="@+id/adapter_page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/page_next_24dp"
            style="@style/Widget.AppCompat.ActionButton"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/adapter_page_next"/>
</RelativeLayout>