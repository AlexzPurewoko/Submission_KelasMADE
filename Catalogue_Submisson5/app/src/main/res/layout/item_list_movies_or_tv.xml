<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/item_image_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tint="@color/image_header"
                android:tintMode="src_in"
                tools:ignore="ContentDescription" />

        <ImageView

                android:id="@+id/item_poster_image"
                style="@style/ImagePosterStyle"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:contentDescription="@string/img_poster_contentdesc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

        <TextView
                android:id="@+id/item_list_text_title"
                style="@style/ItemListTextViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/item_poster_image"
                android:ellipsize="end"
                android:maxLines="2"
                app:layout_constraintEnd_toStartOf="@+id/item_list_btn_favorite"
                app:layout_constraintStart_toEndOf="@+id/item_poster_image"
                app:layout_constraintTop_toTopOf="@+id/item_poster_image"
                tools:text="Aquaman" />

        <TextView
                android:id="@+id/item_list_overview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@id/item_poster_image"
                android:ellipsize="end"
                android:gravity="bottom|top"
                android:maxLines="3"
                app:layout_constraintBottom_toBottomOf="@+id/item_poster_image"
                app:layout_constraintEnd_toEndOf="@+id/item_list_genres"
                app:layout_constraintStart_toStartOf="@+id/item_list_genres"
                app:layout_constraintTop_toBottomOf="@+id/item_list_genres"
                tools:text="Lorem ipsum dolor sit amet" />

        <RatingBar
                android:id="@+id/item_list_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:isIndicator="true"
                android:rating="4.3"
                app:layout_constraintStart_toEndOf="@+id/item_poster_image"
                app:layout_constraintTop_toBottomOf="@+id/item_list_text_title" />

        <TextView
                android:id="@+id/item_list_votecount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/item_list_ratingBar"
                app:layout_constraintStart_toEndOf="@+id/item_list_ratingBar"
                app:layout_constraintTop_toTopOf="@+id/item_list_ratingBar"
                tools:text="(4553)" />

        <id.apwdevs.app.catalogue.plugin.view.WrappedView
                android:id="@+id/item_list_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/item_list_btn_favorite"
                app:layout_constraintStart_toStartOf="@+id/item_list_ratingBar"
                app:layout_constraintTop_toBottomOf="@+id/item_list_ratingBar">

        </id.apwdevs.app.catalogue.plugin.view.WrappedView>

        <ImageView
                android:id="@+id/item_list_btn_favorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/item_favorite_contentdesc"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/item_list_text_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_list_text_title"
                app:srcCompat="@drawable/ic_favorite_border_24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>