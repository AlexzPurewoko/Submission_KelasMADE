<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/no_display_linear"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center" android:padding="16dp">

    <TextView
            android:text="@string/err_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:layout_marginBottom="10dp"/>

    <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="6dp"
            app:contentPadding="10dp"
            app:cardElevation="6dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/go_into_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>