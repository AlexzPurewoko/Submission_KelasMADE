<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:cardCornerRadius="6dp"
                                   app:cardElevation="4dp"
                                   app:cardUseCompatPadding="true"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
        <ImageView
                android:tint="@color/image_header"
                android:tintMode="src_in"
                android:id="@+id/item_image_backdrop"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="0dp" tools:ignore="ContentDescription"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
                android:layout_marginStart="@dimen/cardview_grid_content_padding"
                android:layout_marginEnd="@dimen/cardview_grid_content_padding"
                android:layout_marginTop="@dimen/cardview_grid_content_padding"
                android:contentDescription="@string/img_poster_contentdesc"
                style="@style/ImagePosterStyle.Grid"
                android:id="@+id/item_poster_image"
                tools:srcCompat="@tools:sample/avatars" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:layout_marginStart="@dimen/cardview_grid_content_padding"
                android:layout_marginEnd="@dimen/cardview_grid_content_padding"
                android:id="@+id/item_list_text_title"
                style="@style/ItemListTextViewTitle"
                android:layout_width="0dp"
                android:gravity="center"
                tools:text="Aquaman" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/item_poster_image"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/item_list_release_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="December 12, 2018"
                app:layout_constraintTop_toBottomOf="@+id/item_list_text_title"
                app:layout_constraintStart_toStartOf="@+id/item_list_text_title"
                app:layout_constraintEnd_toEndOf="@+id/item_list_text_title"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_list_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_gravity="center_horizontal"
                android:rating="4.5"
                app:layout_constraintStart_toStartOf="@+id/item_list_text_title"
                app:layout_constraintEnd_toEndOf="@+id/item_list_text_title"
                app:layout_constraintTop_toBottomOf="@+id/item_list_release_date"/>
        <TextView
                tools:text="(8873)"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/item_list_votecount"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/item_list_text_title"
                app:layout_constraintStart_toStartOf="@+id/item_list_text_title"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/item_list_ratingBar"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>