<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|center_vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_signal_wifi_off_grey_24dp"
            android:id="@+id/error_image" android:contentDescription="@string/error_picture"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/error_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" tools:text="Kesalahan Jaringan!"
            android:gravity="center_horizontal" android:paddingStart="16dp" android:paddingEnd="16dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/error_body"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Pastikan perangkat anda mempunyai koneksi internet yang baik" android:gravity="center"
            android:paddingStart="16dp" android:paddingEnd="16dp" android:layout_marginTop="8dp"/>
</LinearLayout>