<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardBackgroundColor="@android:color/white"
        app:contentPadding="4dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/toolbar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_search_black_24dp"
                android:clickable="true"
                android:id="@+id/button_search"
                android:contentDescription="@string/button_search_contentdesc"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>
        <id.apwdevs.app.catalogue.plugin.view.CustomEditText
                android:textColorHint="@android:color/darker_gray"
                android:imeOptions="actionDone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:id="@+id/text_search"
                app:layout_constraintStart_toEndOf="@+id/button_search" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/button_search"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:paddingBottom="0dp" android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/button_search"
                android:hint="@string/search_hint"
                tools:ignore="Autofill" android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toStartOf="@+id/item_list_modes"/>


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_more_vert_black_24dp"
                android:id="@+id/img_more" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/button_search"
                app:layout_constraintBottom_toBottomOf="@+id/text_search" android:contentDescription="@string/btn_menu_more"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_view_list_black_24dp"
                android:id="@+id/item_list_modes"
                app:layout_constraintEnd_toStartOf="@+id/img_more"
                app:layout_constraintTop_toTopOf="@+id/text_search"
                app:layout_constraintBottom_toBottomOf="@+id/text_search" android:layout_marginEnd="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>