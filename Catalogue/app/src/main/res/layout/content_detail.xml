<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.DetailActivity">

    <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text"/>-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:contentPadding="8dp"
                app:cardElevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        tools:text="Overview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_margin="4dp"/>
                <TextView
                        android:text="@string/overview_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/actdetail_text_overview"
                        android:gravity="left" android:layout_margin="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:contentPadding="8dp"
                app:cardElevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        tools:text="Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_margin="4dp"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/actdetail_text_short_detail"/>
                <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/ic_drop_down_24dp"
                        android:id="@+id/actdetail_drop_content" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="@+id/actdetail_text_short_detail"
                        app:layout_constraintBottom_toBottomOf="@+id/actdetail_text_short_detail"
                        android:background="@drawable/btn_transparent_bg"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/actdetail_text_short_detail"
                        app:layout_constraintStart_toStartOf="@+id/actdetail_text_short_detail"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/actdetail_drop_content"
                        android:id="@+id/actdetail_recycler_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <FrameLayout
                android:id="@+id/actdetail_contentfg_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <FrameLayout
                android:id="@+id/actdetail_contentfg_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>