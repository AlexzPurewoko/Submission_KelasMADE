<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/fg_content_frame"
            android:layout_marginBottom="0dp" android:layout_above="@+id/fg_content_bottomnav"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="2dp"
            app:itemIconSize="24dp"
            app:menu="@menu/bottom_nav_movie"
            android:layout_alignParentBottom="true"
            android:id="@+id/fg_content_bottomnav"/>
</RelativeLayout>