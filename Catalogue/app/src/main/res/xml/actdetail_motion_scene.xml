<?xml version="1.0" encoding="utf-8"?>
<MotionScene
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
            app:constraintSetEnd="@id/collapsed"
            app:constraintSetStart="@id/expanded">
        <OnSwipe
                app:dragDirection="dragUp"
                app:touchAnchorId="@id/actdetail_recycler_content"
                app:touchAnchorSide="top"/>
    </Transition>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
                android:id="@id/actdetail_image_header"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                    app:attributeName="imageAlpha"
                    app:customIntegerValue="255"/>
        </Constraint>
        <Constraint
                android:id="@id/item_list_text_title"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toEndOf="@+id/item_poster_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/item_list_ratingBar"/>
        <Constraint
                android:id="@id/item_poster_image"
                android:layout_width="@dimen/item_poster_width_small"
                android:layout_height="@dimen/item_poster_height_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/actdetail_image_header"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">
            <CustomAttribute
                    app:attributeName="imageAlpha"
                    app:customIntegerValue="255"/>
        </Constraint>

        <Constraint
                android:id="@id/item_list_votecount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@+id/item_list_ratingBar"
                app:layout_constraintBottom_toBottomOf="@+id/item_list_ratingBar"
                app:layout_constraintStart_toEndOf="@+id/item_list_ratingBar">
            <Transform
                    android:scaleY="1"
                    android:scaleX="1"/>
        </Constraint>
        <Constraint
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:rating="4.3"
                android:alpha="1"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginBottom="8dp"
                android:id="@id/item_list_ratingBar"
                app:layout_constraintStart_toEndOf="@+id/item_poster_image"
                app:layout_constraintBottom_toTopOf="@+id/avail_socmed">
            <Transform
                    android:scaleY="1"
                    android:scaleX="1"/>
        </Constraint>
        <Constraint
                android:id="@id/avail_socmed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/item_poster_image"
                app:layout_constraintStart_toStartOf="@+id/item_list_ratingBar"
                app:layout_constraintEnd_toEndOf="@+id/item_list_text_title">
            <Transform
                    android:scaleY="1"
                    android:scaleX="1"/>
        </Constraint>

        <Constraint
                android:id="@id/actdetail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@android:id/home"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@android:id/home"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/actdetail_tint"
                app:layout_constraintBottom_toBottomOf="@android:id/home"
                android:alpha="1.0"/>

        <Constraint
                android:id="@id/actdetail_tint"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@android:id/home"
                app:layout_constraintTop_toTopOf="@android:id/home"
                app:layout_constraintEnd_toStartOf="@null"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actdetail_favorite"
                app:layout_constraintVertical_bias="1.2"
                app:layout_constraintEnd_toEndOf="@+id/avail_socmed"
                app:layout_constraintTop_toTopOf="@+id/actdetail_image_header"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/actdetail_image_header">

        </Constraint>

        <Constraint
                android:id="@+id/actdetail_favorite_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="1.0"
                android:scaleY="1.0"
                app:layout_constraintEnd_toEndOf="@+id/actdetail_favorite"
                app:layout_constraintTop_toTopOf="@+id/actdetail_favorite"
                app:layout_constraintBottom_toBottomOf="@+id/actdetail_favorite"
                app:layout_constraintStart_toStartOf="@+id/actdetail_favorite"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
                android:id="@id/actdetail_image_header"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                    app:attributeName="imageAlpha"
                    app:customIntegerValue="0"/>
        </Constraint>
        <Constraint
                android:id="@id/item_list_text_title"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="8dp"
                android:gravity="start|center_vertical"
                android:textStyle="normal"
                app:layout_constraintTop_toTopOf="@android:id/home"
                app:layout_constraintBottom_toBottomOf="@android:id/home"
                app:layout_constraintStart_toEndOf="@android:id/home"
                app:layout_constraintEnd_toStartOf="@id/actdetail_tint"/>
        <Constraint
                android:id="@id/item_poster_image"
                android:layout_width="@dimen/item_poster_width_small"
                android:layout_height="@dimen/item_poster_height_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/actdetail_image_header"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp">
            <CustomAttribute
                    app:attributeName="imageAlpha"
                    app:customIntegerValue="0"/>
        </Constraint>

        <Constraint
                android:id="@id/item_list_votecount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0"
                app:layout_constraintTop_toTopOf="@+id/item_list_ratingBar"
                app:layout_constraintBottom_toBottomOf="@+id/item_list_ratingBar"
                app:layout_constraintStart_toEndOf="@id/item_list_ratingBar" android:layout_marginStart="8dp">
            <Transform
                    android:scaleY="0"
                    android:scaleX="0"/>
        </Constraint>
        <Constraint
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:alpha="0"
                android:rating="4.3"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginBottom="8dp"
                android:id="@id/item_list_ratingBar"
                app:layout_constraintStart_toEndOf="@null"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/avail_socmed">
            <Transform
                    android:scaleY="0"
                    android:scaleX="0"/>
        </Constraint>
        <Constraint
                android:alpha="0"
                android:id="@id/avail_socmed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/item_poster_image"
                app:layout_constraintStart_toStartOf="@+id/item_list_ratingBar"
                app:layout_constraintEnd_toEndOf="parent">
            <Transform
                    android:scaleY="0"
                    android:scaleX="0"/>
        </Constraint>
        <Constraint
                android:id="@id/actdetail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@android:id/home"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@android:id/home"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/actdetail_tint"
                app:layout_constraintBottom_toBottomOf="@android:id/home"
                android:alpha="0.0"/>
        <Constraint
                android:id="@id/actdetail_tint"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@android:id/home"
                app:layout_constraintTop_toTopOf="@android:id/home"
                app:layout_constraintEnd_toStartOf="@id/actdetail_favorite"
                app:layout_constraintEnd_toEndOf="@null"/>

        <Constraint
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/actdetail_favorite"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toEndOf="@+id/avail_socmed"
                app:layout_constraintTop_toTopOf="@+id/actdetail_tint"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/actdetail_image_header">
        </Constraint>

        <Constraint
                android:id="@+id/actdetail_favorite_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="0.0"
                android:scaleY="0.0"
                app:layout_constraintEnd_toEndOf="@+id/actdetail_favorite"
                app:layout_constraintTop_toTopOf="@+id/actdetail_favorite"
                app:layout_constraintBottom_toBottomOf="@+id/actdetail_favorite"
                app:layout_constraintStart_toStartOf="@+id/actdetail_favorite"/>
    </ConstraintSet>
</MotionScene>