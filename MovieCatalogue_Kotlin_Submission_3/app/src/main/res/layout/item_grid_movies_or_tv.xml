<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true"
                                    app:contentPadding="@dimen/cardview_grid_content_padding"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:contentDescription="@string/img_poster_contentdesc"
                style="@style/ImagePosterStyle.Grid"
                android:id="@+id/item_list_image"
                tools:srcCompat="@tools:sample/avatars"/>

        <TextView
                android:id="@+id/item_list_text_title"
                style="@style/ItemListTextViewTitle"
                android:gravity="center"
                tools:text="Aquaman"/>

        <TextView
                android:id="@+id/item_list_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                tools:text="December 12, 2018"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_list_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_gravity="center_horizontal"
                android:rating="4.5"
                android:layout_marginTop="8dp"/>
        <TextView
                tools:text="(8873)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/item_list_votecount"
                android:gravity="center_horizontal"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>